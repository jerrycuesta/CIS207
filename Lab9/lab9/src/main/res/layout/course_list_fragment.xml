<?xml version="1.0" encoding="utf-8"?>

<!-- Fragment for main activity -->

<RelativeLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="3dp" xmlns:android="http://schemas.android.com/apk/res/android">

    <ListView
        android:id="@+id/listViewCourses"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottom_section"
        android:layout_width="fill_parent"
        android:layout_alignParentTop="true"
        />

    <View
        android:id="@+id/view_separator"
        android:layout_above="@+id/bottom_section"
        android:background="#000000"
        android:layout_centerVertical ="true"
        android:layout_width = "fill_parent"
        android:layout_height="2dip"
        />

    <LinearLayout
        android:id="@+id/bottom_section"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="1dip"
        android:layout_alignParentBottom="true"
        >

        <Button
            style="?android:attr/buttonStyleSmall"
            android:id="@+id/button_add_section"
            android:text="@string/add_button_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:id="@+id/button_delete_section"
            android:text="@string/delete_button_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

    </LinearLayout >

</RelativeLayout>
